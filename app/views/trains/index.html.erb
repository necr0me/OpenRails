<% provide(:title, "Trains") %>
<%= button_to "Create new train", trains_path, method: :post, class: "btn btn-outline-success", style: "font-size: 15px; margin: 10px 0" %>
<div class="output-table">
  <table class="table table-hover">
    <thead class="table-dark">
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Number of carriages</th>
      <th>Route</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'trains/partials/train_row', :collection => @trains, :as => :train  %>
    </tbody>
    <%= will_paginate %>
  </table>
</div>