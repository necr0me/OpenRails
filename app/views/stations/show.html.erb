<% provide(:title, @station.name + " table") %>
<h1 style="margin: 10px 0; text-align: center"><%=@station.name %> passing trains table</h1>
<table class="table table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Destination</th>
      <th>Arrival</th>
      <th>Departure</th>
    </tr>
  </thead>
  <tbody>
    <% @station.passing_trains.each do |train| %>
      <tr style="height: 65px; background-color: #b0f0ff">
        <td>0001</td>
        <td><%= train.destination %></td>
        <td><%= train.arrival_time %></td>
        <td><%= train.departure_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>