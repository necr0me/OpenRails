<% provide(:title, "Profile") %>
<div class="center-container">
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="true">Profile</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="pills-tickets-tab" data-bs-toggle="pill" data-bs-target="#pills-tickets" type="button" role="tab" aria-controls="pills-tickets" aria-selected="false">Tickets</button>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <% if @user.user_info.present? %>
        <div style="display: flex;">
          <div class="names" style="display: flex; flex-direction: column; font-size: 20px; margin: 15px;">
            <div>Name: </div>
            <div>Surname: </div>
            <div>Patronymic: </div>
            <div>Passport code: </div>
            <div>Phone number: </div>
            <div>Email: </div>
          </div>
          <div class="names-values" style="display: flex; flex-direction: column; font-size: 20px; margin: 15px;">
            <div><%= @user.user_info.name %></div>
            <div><%= @user.user_info.surname %></div>
            <div><%= @user.user_info.patronymic %></div>
            <div><%= @user.user_info.passport_code %></div>
            <div><%= @user.user_info.phone_number %></div>
            <div><%= @user.email %></div>
          </div>
        </div>
      <% else %>
        <% if current_user_admin? %>
          <h2>User haven't filled info about him.</h2>
        <% else %>
          <h2>It looks like you haven't filled information about you yet.</h2>
          <br>
          <h2>You can make it <%= link_to "here", edit_user_path(@user.id), method: :get %></h2>
        <% end %>
      <% end %>
      <% if current_user.id == @user.id %>
        <%= button_to "Edit", edit_user_path(@user.id), method: :get, class: 'btn btn-success', style: "font-size: 15px; display: block; margin: 0 auto" %>
      <% end %>
    </div>
    <div class="tab-pane fade" id="pills-tickets" role="tabpanel" aria-labelledby="pills-tickets-tab">
    </div>
  </div>

</div>