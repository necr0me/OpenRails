<header class="p-3 bg-dark text-white">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to "Home", root_path %></li>
        <li><a href="#">Tickets</a></li>
      </ul>
      <div class="text-end">
      <% unless current_user %>
          <%= link_to "Login", new_user_session_path, class: "btn btn-outline-light me-2" %>
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-warning" %>
        </div>
      <% else %>
        <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-outline-light" %>
      <% end %>
    </div>
  </div>
</header>