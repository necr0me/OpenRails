<header class="p-3 bg-dark text-white">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Routes", routes_path %></li>
        <li><%= link_to "Stations", stations_path %></li>
      </ul>
      <div class="text-end">
      <% unless current_user %>
          <%= link_to "Login", new_user_session_path, class: "btn btn-outline-light me-2" %>
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-warning" %>
        </div>
      <% else %>
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Account
              </a>
              <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                <li><%= button_to "Profile", user_path(current_user), method: :get, class: "dropdown-item" %></li>
                <li><%= button_to "Edit profile", edit_user_path(current_user), method: :get, class: "dropdown-item" %></li>
                <li class="divider"></li>
                <li><%= button_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
              </ul>
            </li>
          </ul>
      <% end %>
    </div>
  </div>
</header>