<tr class='route-row' id="route-<%= route.id %>">
  <th scope="row"><%=route.id %></th>
  <td>
    <% if route.stations.count > 1 %>
      <%= route.stations.first.name %>   -   <%= route.stations.last.name %>
    <% else %>
      -
    <% end %>
  </td>
  <td style="width: 20%">
    <div style="display: flex; flex-direction: row;">
      <%= button_to edit_route_path(route.id), method: :get, class: 'btn btn-outline-primary' do %>
        <i class="bi bi-pencil-square"></i>
      <% end %>
      <%= button_to route_path(route.id), method: :delete, class: 'btn btn-outline-danger', confirm: 'Are you sure?' do %>
        <i class="bi bi-trash3"></i>
      <% end %>
    </div>
  </td>
</tr>